{
 "compilerOptions": {
  "rootDir": "src",
  "outDir": "build",
  "target": "es6",
  "allowJs": true,
  "moduleResolution": "node",
  "module": "commonjs",
  "sourceMap": true,
  "allowSyntheticDefaultImports": true,
  "forceConsistentCasingInFileNames": true,
  "jsx": "react",
  "strict": true,
  "skipLibCheck": true
 },
 "include": [
  "src/**/*", "src/declaration.d.ts"
 ],
 "exclude": [
  "node_modules",
  "build"
 ]
}